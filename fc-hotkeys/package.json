{
  "name": "fc-hotkeys",
  "version": "0.0.1",
  "description": "fc-hotkeys, bind hot keys for your app",
  "repository": {
    "type": "git",
    "url": "https://github.com/wx-chevalier/fractal-components/tree/master/fc-hotkeys"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "redux",
    "mobx",
    "webpack",
    "typescript"
  ],
  "author": "wxyyxc1992@github",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{ts,tsx,scss,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "bootstrap": "lerna clean --yes && lerna bootstrap",
    "build": "npm run clean && lerna exec -- npm run build",
    "clean": "lerna run clean --parallel",
    "cleanCov": "rimraf @coverage",
    "dev": "webpack-dev-server --config ./scripts/webpack/webpack.config.dev.js --hot",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "precommit": "lint-staged",
    "prettier-all": "prettier --write 'src/**/*' '!src/{assets,datas}/**'",
    "start": "webpack-dashboard -- npm run dev",
    "test": "jest --config ./scripts/jest/jest.config.js",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm run cleanCov && npm test -- --coverage",
    "upgrade": "./scripts/tools/upgrade_pkgs.sh"
  },
  "devDependencies": {
    "@types/jest": "24.0.13",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.13.0",
    "prettier": "^1.17.1",
    "autoprefixer": "9.5.1",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "2.1.1",
    "enzyme": "^3.9.0",
    "file-loader": "3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.3.3",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "json-server": "0.14.2",
    "lerna": "^3.14.1",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "parallelshell": "^3.0.2",
    "postcss-loader": "3.0.0",
    "react-hot-loader": "^4.8.5",
    "resolve-url-loader": "3.1.0",
    "rimraf": "^2.6.3",
    "style-loader": "0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "6.0.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "3.4.5",
    "uglifyjs-webpack-plugin": "2.1.3",
    "url-loader": "^1.1.2",
    "wasm-loader": "^1.3.0",
    "webpack": "^4.31.0",
    "webpack-cli": "3.3.2",
    "webpack-dashboard": "3.0.7",
    "webpack-dev-server": "^3.3.1",
    "workerize-loader": "^1.0.4"
  }
}